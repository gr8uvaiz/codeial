<h1>Codeial / <%=title%></h1>

<section id="posts-container">
    <h4>Post</h4>
    <%if(locals.user){%>  <!-- because we are setting locals req.locals.user = req.user in passport config -->
    <form action="/posts/create" method="post">
        <textarea name="content" placeholder="What's in Your Mind ?" cols="30" rows="4" required></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>

    <div id="post-lists">
        <%for(post of posts){%>
            <ul>

                <li>
                    <p>
                        <%= post.content%> <br>
                        <small>
                            <%= post.user.name %>
                        </small>
                    </p>

                    <%if(locals.user){%>
                    <div id="comment-container">
                        <form action="/comments/create" method="post">
                            <input type="text" name="content" placeholder="Type Comment.." required>
                            <input type="hidden" name="post" value="<%=post._id%>">    
                            <input type="submit" value="Comment">
                        </form>
                    </div>
                    <%}%>

                    <div class="comments-list">
                        <ul id="post-comments-<%=post._id%>">
                            
                                <%for(comment of post.comment){%>
                                    <li>
                                <%= comment.content %>
                                <br>
                                <small>
                                    <%= comment.user.name %>
                                </small>
                                <%}%>
                            </li>
                           
                        </ul>
                    </div>
                </li>
            </ul>
          
        <%}%>
    </div>
</section>


